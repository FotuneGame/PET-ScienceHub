{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,    
    
    //Для sequalize-typescript  
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"],
  "ts-node": {
    "transpileOnly": true,
  },
}
